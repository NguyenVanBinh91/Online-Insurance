@model IEnumerable<Incerrance.Model.DAL.Registration_Insurance>
@{
	ViewBag.Title = "Registration Insurance List";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
	int i = 1;
}
<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				@using (Html.BeginForm())
				{
					<div class="form-group">
						@Html.TextBox("SearchString", null, new { @class = "col-md-4 form-control float-left", @value = ViewBag.SearchString })
						<button type="submit" class="btn btn-secondary ml-1"><i class="fa fa-search"></i></button>
					</div>
				}
				<thead>
					<tr>
						<th>
							STT
						</th>
						<th>
							Full Name
						</th>
						<th>
							Insurrance
						</th>
						<th>
							TotalMoney
						</th>
						<th>
							RegistrationDate
						</th>
						<th>
							ExpirationDate
						</th>
						<th>
							CMND
						</th>
						<th>
							Phone
						</th>
						<th>
							Status
						</th>
						<th class="text-center" style="width: 115px;"></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
					<tr>
						<td class="text-center">
							@i
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.FullName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Insurrance.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.TotalMoney) VNĐ
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.RegistrationDate)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.ExpirationDate)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.CMND)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Phone)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Status)
						</td>
						<td>
							<a class="btn-sm btn-group-sm btn-success" href="/Admin/Registration_Insurance/Edit?id=@item.Id"><i class="far fa-edit"></i></a>
							<a class="btn-sm btn-group-sm btn-secondary dialog-link" href="@Url.Action("Details", new { id = item.Id })"><i class="fas fa-info"></i></a>
						</td>
					</tr>
						i++;
					}
				</tbody>
			</table>
			@if (Model.Count() <= 0)
			{
				<div class="text-center text-danger">No data</div>
			}
		</div>
	</div>
</div>
