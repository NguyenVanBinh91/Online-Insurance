@model Incerrance.Model.DAL.Insurrance
@{
	ViewBag.Title = "Insurance details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	.imageDetail {
		transition: all .4s ease-in-out;
	}

		.imageDetail:hover {
			transform: scale(1.4);
		}
</style>
<!--start-breadcrumbs-->
<div class="breadcrumbs">
	<div class="container">
		<div class="breadcrumbs-main">
			<ol class="breadcrumb">
				<li><a href="/trang-chu">Home</a></li>
				<li class="active">@ViewBag.Title</li>
			</ol>
		</div>
	</div>
</div>
<!--end-breadcrumbs-->
<!--start-single-->
<div class="single contact">
	<div class="container">
		<div class="single-main">
			<div class="col-md-9 single-main-left">
				<div class="sngl-top">
					<div class="col-md-12 single-top-right">
						<div class="details-left-info simpleCart_shelfItem">
							<h3>@Model.Name</h3>
							<p class="availability">
								Status:
								@if (Model.Quantity > 0)
								{
									<span class="text-primary">Still insurance</span>
								}
								else
								{
									<span class="text-danger">Insurance is temporarily out</span>
								}
							</p>
							<p>Insurrance Category: @Model.InsurranceCategory.Name -- Price: @Convert.ToDecimal(Model.Price).ToString("#,##0") VNĐ</p>
							<div class="single-but item_add">
								<a href="/Registration_Insurance/Index?insurranceId=@Model.Id">
									@if (Model.Quantity > 0)
									{
										<input type="submit" value="Register now" />
									}
									else
									{
										<input type="submit" disabled value="Register now" />
									}
								</a>
							</div>
							<p class="quick_desc">@Html.Raw(Model.Description)</p>
							<div class="clearfix"> </div>


						</div>
					</div>
					<div class="clearfix"></div>
				</div>

				<div class="latest products">
					<div class="product-one">
						@{ Html.RenderAction("LoadLastedInsurrance", "Insurrance");}
						<div class="clearfix"> </div>
					</div>
				</div>
			</div>
			<div class="col-md-3 single-right">
				<h3>Insurance type</h3>
				<ul class="product-categories">
					@{ Html.RenderAction("LoadCategory", "Insurrance");}
				</ul>
			</div>
			<div class="clearfix"> </div>
		</div>
	</div>
</div>
<!--end-single-->