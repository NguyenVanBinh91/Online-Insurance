@model Incerrance.Model.DAL.Registration_Insurance

@{
	ViewBag.Title = "Claim Insurance";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--start-breadcrumbs-->
<div class="breadcrumbs">
	<div class="container">
		<div class="breadcrumbs-main">
			<ol class="breadcrumb">
				<li><a href="/trang-chu">Home</a></li>
				<li class="active">@ViewBag.Title</li>
			</ol>
		</div>
	</div>
</div>
<div class="container">
	<h3>@ViewBag.Title</h3>
	<div class="row">

		<div class="col-md-6 contact-left">
			@if (Model.ClaimInsurances.Count > 0)
			{
				<h3>Reply</h3>
				foreach (var item in Model.ClaimInsurances)
				{
					<p>@item.Description</p>
					<p>@item.ModifiedOn</p>
					<br/>
				}
			}
			@using (Html.BeginForm("PostClaimInsurances", "ClaimInsurances", FormMethod.Post))
			{
				<input type="hidden" name="RegistrationInsuranceId" class="form-control" value="@Model.Id" />
				<div class="form-group col-md-12">
					<label class="h3">Content</label>
					<textarea name="Description" required oninvalid="this.setCustomValidity('Please enter Content')" oninput="setCustomValidity('')" class="form-control"></textarea>
				</div>

				<div class="form-group col-md-12">
					<button type="submit" class="btn">Claim Insurance</button>
				</div>
			}
		</div>
		<div class="col-md-6 contact-left">
			<h3>@Model.Insurrance.Name</h3>
			<p>RegistrationDate: @Model.RegistrationDate -- ExpirationDate: @Model.ExpirationDate</p>
			<p>Insurrance Category: @Model.Insurrance.InsurranceCategory.Name -- Price: @Convert.ToDecimal(Model.Insurrance.Price).ToString("#,##0") VNĐ</p>
			<p>Insurance Period: @Model.Insurrance.InsurancePeriod Month</p>
			<p class="quick_desc">@Html.Raw(Model.Insurrance.Description)</p>
		</div>
		<div class="clearfix"></div>
	</div>
</div>
</div><!--end-breadcrumbs-->