@model IEnumerable<Incerrance.Model.DAL.Registration_Insurance>

@{
	ViewBag.Title = "My insurance";
	Layout = "~/Views/Shared/_Layout.cshtml";
	int i = 1;
}
<!--start-breadcrumbs-->
<div class="breadcrumbs">
	<div class="container">
		<div class="breadcrumbs-main">
			<ol class="breadcrumb">
				<li><a href="/trang-chu">Home</a></li>
				<li class="active">@ViewBag.Title</li>
			</ol>
		</div>
	</div>
</div>
<!--end-breadcrumbs-->


<div class="table-responsive container" style="margin-top: 10px;">
	@foreach (var item in Model)
	{
		var url = "/insurrance/" + item.Insurrance.MetaTitle + "/" + item.Insurrance.Id;
		var urlextensioninsurance = "/Registration_Insurance/ExtensionOfInsurance?reginsuranceId=" + item.Id;
		var urlClaimInsurances = "/ClaimInsurances/Index?registrationInsuranceId=" + item.Id;
		<div class="col-md-4 product-left " style="margin-bottom:27px">
			<div class="p-one simpleCart_shelfItem" style="height:600px;">
				<a href="@url">
					<img src="@item.Insurrance.ImagesInsurrance" width="300" height="300" alt="" />
				</a>
				<h4>@item.Insurrance.Name</h4>
				<h5>Status: @item.Status</h5>
				<h5> Registration Date: @item.RegistrationDate</h5>
				<h5>Expiration Date: @item.ExpirationDate</h5>
				<h5>Total Money: @Convert.ToDecimal(item.TotalMoney).ToString("#,##0") VNĐ</h5>
				<h5>Insurance Period: @item.Insurrance.InsurancePeriod Month</h5>
				<a href="@urlClaimInsurances" class="btn btn-group-sm btn-primary text-decoration-none" style="margin-bottom:10px;">Claim insurance claims</a>
				<a href="@urlextensioninsurance" class="btn btn-group-sm btn-primary text-decoration-none">Request an extension of insurance</a>

			</div>
		</div>
	}

	@if (Model.Count() <= 0)
	{
		<div class="text-center text-danger">No insurance</div>
	}
</div>
